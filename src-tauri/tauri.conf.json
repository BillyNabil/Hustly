{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Hustly",
  "version": "0.1.3",
  "identifier": "com.hustly.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://192.168.2.7:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Hustly",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "transparent": true,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}